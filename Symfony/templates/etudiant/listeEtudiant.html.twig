{% extends 'base.html.twig' %}

{% block title %}Liste des Etudiants!{% endblock %}

{% block body %}

<br><br>
<h1 class="text-2xl font-bold mb-4 text-center">Liste des Etudiants</h1>

<table class="max-w-7xl mx-auto table-auto border-collapse bg-white shadow-md rounded-lg overflow-hidden">
    <thead class="bg-gray-800 text-white">
        <tr>
            <th class="px-4 py-2 text-left">ID</th>
            <th class="px-4 py-2 text-left">Nom</th>
            <th class="px-4 py-2 text-left">Prénom</th>
            <th class="px-4 py-2 text-left">Numéro</th>
            <th class="px-4 py-2 text-left">Adresse</th>
            <th class="px-4 py-2 text-left">Classe</th>
        </tr>   
    </thead>
    <tbody class="text-gray-700">
        {% for etudiant in etudiants %}
            <tr class="border-t hover:bg-gray-100">
                <td class="px-4 py-2">{{ etudiant.id }}</td>
                <td class="px-4 py-2">{{ etudiant.nom }}</td>
                <td class="px-4 py-2">{{ etudiant.prenom }}</td>
                <td class="px-4 py-2">{{ etudiant.numero }}</td>
                <td class="px-4 py-2">{{ etudiant.adresse }}</td>
                <td class="px-4 py-2">{{ etudiant.classe.nom }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="px-4 py-2 text-center text-gray-500">Aucun étudiant trouvé</td>
            </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
